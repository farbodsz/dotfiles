#!/usr/bin/env bash

#
# Script to style Ubuntu terminal
#
# This is run by .bashrc.
#


#
# Terminal colouring for git branches
# https://gist.github.com/danielalvarenga/2df8cabbd6f3041c2378
#

function parse_git_branch () {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

RED="\[\033[01;31m\]"
YELLOW="\[\033[01;33m\]"
GREEN="\[\033[01;32m\]"
BLUE="\[\033[01;34m\]"
NO_COLOR="\[\033[00m\]"

# Host is the name of the computer, usually follows the `@` sign:
# E.g. in `farbod@farbod-XPS-9550`

# # with host
# PS1="$GREEN\u@\h$NO_COLOR:$BLUE\w$YELLOW\$(parse_git_branch)$NO_COLOR\$ "
# without host
PS1="$GREEN\u$NO_COLOR:$BLUE\w$YELLOW\$(parse_git_branch)$NO_COLOR\$ "
