#!/usr/bin/env bash
# Prints the time with its corresponding clock emoji

strtime=$(date '+%H:%M')

case "$strtime" in
  00:[0-2]*) emoji="ğŸ•›" ;;
  00:[3-5]*) emoji="ğŸ•§" ;;
  12:[0-2]*) emoji="ğŸ•›" ;;
  12:[3-5]*) emoji="ğŸ•§" ;;
  01:[0-2]*) emoji="ğŸ•" ;;
  01:[3-5]*) emoji="ğŸ•œ" ;;
  13:[0-2]*) emoji="ğŸ•" ;;
  13:[3-5]*) emoji="ğŸ•œ" ;;
  02:[0-2]*) emoji="ğŸ•‘" ;;
  02:[3-5]*) emoji="ğŸ•" ;;
  14:[0-2]*) emoji="ğŸ•‘" ;;
  14:[3-5]*) emoji="ğŸ•" ;;
  03:[0-2]*) emoji="ğŸ•’" ;;
  03:[3-5]*) emoji="ğŸ•" ;;
  15:[0-2]*) emoji="ğŸ•’" ;;
  15:[3-5]*) emoji="ğŸ•" ;;
  04:[0-2]*) emoji="ğŸ•“" ;;
  04:[3-5]*) emoji="ğŸ•Ÿ" ;;
  16:[0-2]*) emoji="ğŸ•“" ;;
  16:[3-5]*) emoji="ğŸ•Ÿ" ;;
  05:[0-2]*) emoji="ğŸ•”" ;;
  05:[3-5]*) emoji="ğŸ• " ;;
  17:[0-2]*) emoji="ğŸ•”" ;;
  17:[3-5]*) emoji="ğŸ• " ;;
  06:[0-2]*) emoji="ğŸ••" ;;
  06:[3-5]*) emoji="ğŸ•¡" ;;
  18:[0-2]*) emoji="ğŸ••" ;;
  18:[3-5]*) emoji="ğŸ•¡" ;;
  07:[0-2]*) emoji="ğŸ•–" ;;
  07:[3-5]*) emoji="ğŸ•¢" ;;
  19:[0-2]*) emoji="ğŸ•–" ;;
  19:[3-5]*) emoji="ğŸ•¢" ;;
  08:[0-2]*) emoji="ğŸ•—" ;;
  08:[3-5]*) emoji="ğŸ•£" ;;
  20:[0-2]*) emoji="ğŸ•—" ;;
  20:[3-5]*) emoji="ğŸ•£" ;;
  09:[0-2]*) emoji="ğŸ•˜" ;;
  09:[3-5]*) emoji="ğŸ•¤" ;;
  21:[0-2]*) emoji="ğŸ•˜" ;;
  21:[3-5]*) emoji="ğŸ•¤" ;;
  10:[0-2]*) emoji="ğŸ•™" ;;
  10:[3-5]*) emoji="ğŸ•¥" ;;
  22:[0-2]*) emoji="ğŸ•™" ;;
  22:[3-5]*) emoji="ğŸ•¥" ;;
  11:[0-2]*) emoji="ğŸ•š" ;;
  11:[3-5]*) emoji="ğŸ•¦" ;;
  23:[0-2]*) emoji="ğŸ•š" ;;
  23:[3-5]*) emoji="ğŸ•¦" ;;
  *) echo "âŒ" ;;
esac

echo "$emoji $strtime "
