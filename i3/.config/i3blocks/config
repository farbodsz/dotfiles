#-------------------------------------------------------------------------------
# i3blocks config file
#-------------------------------------------------------------------------------

# Global properties
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

# Battery indicator
# https://github.com/vivien/i3blocks-contrib/tree/master/battery2
[battery]
command=$SCRIPT_DIR/battery2
markup=pango
interval=30

# Date Time
[date]
label=ðŸ“…
command=date '+%d/%m/%Y'
interval=600

[time]
label=ðŸ•“
command=date '+%H:%M'
interval=20
